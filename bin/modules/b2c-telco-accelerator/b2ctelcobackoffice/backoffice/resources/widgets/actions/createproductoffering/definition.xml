<action-definition id="de.hybris.platform.b2ctelcobackoffice.action.createproductoffering"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/action-definition.xsd">

    <name>Create Product Offering Action</name>
    <description>Triggers the Create Product Offering wizard.</description>
    <author>hybris</author>
    <version>1.0</version>

    <actionClassName>de.hybris.platform.b2ctelcobackoffice.actions.create.CreateTmaPoAction</actionClassName>

    <inputType>de.hybris.platform.b2ctelcoservices.model.TmaProductSpecificationModel</inputType>
    <outputType>de.hybris.platform.b2ctelcoservices.model.TmaProductOfferingModel</outputType>
    <sockets>
        <output id="createContext" type="java.util.Map"/>
    </sockets>

    <settings>
        <setting key="viewMode" default-value="iconOnly"/>
    </settings>

    <iconUri>icons/icon_action_add_default.png</iconUri>
    <iconHoverUri>icons/icon_action_add_hover.png</iconHoverUri>
    <iconDisabledUri>icons/icon_action_add_disabled.png</iconDisabledUri>

</action-definition>
